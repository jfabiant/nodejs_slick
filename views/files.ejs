<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Archivos - Nodejs - Slick</title>
  <link rel="stylesheet" type="text/css" href="slick/slick.css"/>
  <link rel="stylesheet" type="text/css" href="slick/slick-theme.css"/>
  <link rel="stylesheet" href="css/style.css">
</head>
<body>

    <% if (files.length === 0) {%>

        <p><strong>No hay archivos subidos</strong></p>
        
    <% } else {  %>

    <div class="slider-for">

        <% files.forEach(function(file){  %>

        <div class="item">
          <img src="uploads/<%= file %>" alt="<%= file %>"  draggable="false"/>
        </div>
        
      <% }); %>
    
    </div>

    <div class="slider-nav">

        <% files.forEach(function(file){  %>
            
        <div class="item">
          <img src="uploads/<%= file %>" alt="<%= file %>" draggable="false"/>
        </div>

        <% }); %>
        
    </div>

    <p>Presentacion grande</p>
    <button class="left-for">Left</button>
    <button class="right-for">Right</button>

    <p>Presentacion peque√±a</p>
    <button class="left-nav">Left</button>
    <button class="right-nav">Right</button>

    <% } %>

      <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
      <script type="text/javascript" src="slick/slick.js"></script>
      <script src="js/main.js"></script>
</body>
</html>